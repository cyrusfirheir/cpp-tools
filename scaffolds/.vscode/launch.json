{
	"version": "0.2.0",
	"configurations": [
		{
			"name": "C++ Build & Launch",
			"type": "cppdbg",
			"request": "launch",
			"program": "${cwd}/bin/main.exe",
			"args": [],
			"stopAtEntry": false,
			"cwd": "${workspaceFolder}/bin/",
			"environment": [],
			"console": "integratedTerminal",
			"MIMode": "gdb",
			"setupCommands": [
				{
					"description": "Enable pretty-printing for gdb",
					"text": "-enable-pretty-printing",
					"ignoreFailures": true
				}
			],
			"preLaunchTask": "Build"
		}
	]
}